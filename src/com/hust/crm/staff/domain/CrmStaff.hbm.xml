<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.hust.crm.staff.domain.CrmStaff" table="Crm_staff">
		<id name="staffId">
			<generator class="uuid"></generator>
		</id>
		<property name="loginName"></property>
		<property name="loginPwd"></property>
		<property name="staffName"></property>
		<property name="gender"></property>
		<property name="onDutyDate">
			<column name="onDutyDate" sql-type="datetime"></column>
		</property>

		<!--多对一 多个职务属于同一个部门-->
		<many-to-one name="post" class="com.hust.crm.post.domain.CrmPost" column="postId"></many-to-one>
	</class>
</hibernate-mapping>